{
  "name": "sonuby-cloud-workers-v2",
  "type": "module",
  "scripts": {
    "ci": "npm run cf-typegen && npm run test && npm run type-check && npm run lint:fix && npm run format",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean": "git clean -xdf node_modules .wrangler",
    "deploy": "pnpm run deploy:production",
    "deploy:prod": "wrangler deploy --env production --minify",
    "deploy:beta": "wrangler deploy --env beta --minify",
    "deploy:staging": "wrangler deploy --env staging --minify",
    "deploy:testing": "wrangler deploy --env testing --minify",
    "deploy:dev": "wrangler deploy --env development --minify",
    "deploy:all": "pnpm run deploy:prod && pnpm run deploy:beta && pnpm run deploy:staging && pnpm run deploy:testing && pnpm run deploy:dev",
    "dev": "wrangler dev --env development",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json,yml,yaml}\"",
    "lint:fix": "eslint --fix",
    "lint": "eslint",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/firebase-auth": "^1.4.2",
    "@hono/zod-validator": "^0.4.2",
    "hono": "^4.6.16",
    "hono-pino": "^0.7.0",
    "http-status-codes": "^2.3.0",
    "jose": "^5.9.6",
    "pino": "^9.6.0",
    "semver": "^7.6.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.6.0",
    "@cloudflare/workers-types": "^4.20250109.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "2.1.8",
    "wrangler": "^3.101.0"
  }
}
